<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sai.tictactoe.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    android:id="@+id/main_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:visibility="gone">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_players_email"
            android:id="@+id/email_edit_text"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accept_button"
            android:text="@string/str_accept"
            android:textSize="12sp"
            android:onClick="acceptButtonClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/request_button"
            android:text="@string/str_request"
            android:textSize="12sp"
            android:onClick="requestButtonClick"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                style="@style/PlayButtonStyle"
                tools:text="X"/>

            <Button
                android:id="@+id/button2"
                style="@style/PlayButtonStyle"/>

            <Button
                android:id="@+id/button3"
                style="@style/PlayButtonStyle"
                android:layout_marginEnd="0dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                style="@style/PlayButtonStyle"/>
            <Button
                android:id="@+id/button5"
                style="@style/PlayButtonStyle"/>

            <Button
                android:id="@+id/button6"
                style="@style/PlayButtonStyle"
                android:layout_marginEnd="0dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                style="@style/PlayButtonStyle"/>

            <Button
                android:id="@+id/button8"
                style="@style/PlayButtonStyle" />

            <Button
                android:id="@+id/button9"
                style="@style/PlayButtonStyle"
                android:layout_marginEnd="0dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>

